<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.ui.exportFile.ExportFragment">

    <Button
        android:id="@+id/button_export"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:text="Export data"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_delete_all"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@color/buttonDelete"
        android:text="@string/button_delete_all"
        android:textColor="@color/buttonLabel"
        app:backgroundTint="@color/buttonDelete"
        app:layout_constraintEnd_toEndOf="@+id/button_export"
        app:layout_constraintStart_toStartOf="@+id/button_export"
        app:layout_constraintTop_toBottomOf="@+id/button_export" />
</androidx.constraintlayout.widget.ConstraintLayout>